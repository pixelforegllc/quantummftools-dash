# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=QuantumMF Tools
APP_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/quantummftools
MONGODB_TEST_URI=mongodb://localhost:27017/quantummftools_test

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=7d

# AD Integration
AD_URL=ldap://your.ad.server
AD_BASE_DN=DC=example,DC=com
AD_USERNAME=your_ad_username
AD_PASSWORD=your_ad_password

# API Keys
ZOHO_API_KEY=your_zoho_api_key
INFOBIP_API_KEY=your_infobip_api_key

# SMS Configuration
SMS_WINDOW_START=07:30
SMS_WINDOW_END=17:30
SMS_TIMEZONE=America/Los_Angeles

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090